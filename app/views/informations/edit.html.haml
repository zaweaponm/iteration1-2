%h1.title Administration
%h1 Edit Information

= form_tag information_path(@information), :method => :put do
  = label :information, :topic, 'Topic'
  = text_field :information, 'topic'

  = label :information, :content, 'Content'
  = text_area :information, 'content'

  = label :information, :picture, 'Picture'
  = text_field :information, 'picture'

  = label :information, :institution, 'Institution'
  = text_field :information, 'institution' 

  = submit_tag 'Update Information'